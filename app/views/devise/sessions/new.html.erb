<div class="container-login">
  <div class="form-l">
    <div class="form-body"></div>
      <div class="form-title form-margins">
        <h2>Welcome to</h2>
      </div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs form-margins form-fonts">
        <%= f.input :email,
        placeholder: 'Email',
        label:false,
        required: false,
        autofocus: true,
        input_html: { autocomplete: "email" } %>
        <%= f.input :password,
        placeholder: 'password',
        label:false,
        required: false,
        input_html: { autocomplete: "current-password" } %>
        <!-- <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %> -->
      </div>

      <div class="form-actions form-buttons form-margins">
        <div class="btn-back-login mr-2"><%= link_to "Back", "/"%></div>
        <div class="btn-forward-login ml-2"><i class="fas fa-arrow-right"></i><%= f.button :submit, "Log in", class: "btn-forward-login" %></div>
      </div>
    <% end %>

    <!-- <%= render "devise/shared/links" %> -->
  </div>
  <div class="login-background">
  </div>
</div>

