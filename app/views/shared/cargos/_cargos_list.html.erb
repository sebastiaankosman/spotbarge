<div class="container">
  <div class="top-row">
    <div class="cargo-text">
      <h1>Find your cargo here</h1>
    </div>
    <div class="filter-result-card">
      <div class="filter-box-card">
        <div class="green-filter-box">
          Area
        </div>
        <div class="white-filter-box">
          <div>test</div>
          <div>test</div>
          <div>test</div>
          <div>test</div>
        </div>
      </div>
      <div class="filter-box-card">
        <div class="green-filter-box">
          Cargo
        </div>
        <div class="white-filter-box">
          <div>test</div>
          <div>test</div>
          <div>test</div>
          <div>test</div>
        </div>
      </div>
      <div class="filter-box-card">
        <div class="green-filter-box">
          Volume in tons
        </div>
      </div>
      <div class="filter-box-card">
        <div class="green-filter-box">
          Load date
        </div>
      </div>
    </div>
  </div>
  <div class="middle-row">
    <% @cargos.each_with_index do |cargo, i| %>
      <% if i%2 == 0 %>
        <div class="result-card-white">
      <% else %>
        <div class="result-card">
      <% end %>
      <div class="cargo-name-card">
        <h3>Cargo</h3>
        <h4><%= cargo.cargo_name %></h4>
      </div>
      <div class="cargo-specifics">
        <div class="specifics-details">
          <h3>Specifics</h3>
          <div>Load location</div>
          <div>Discharge location</div>
          <div>Gasfree required</div>
          <div>Load date </div>
          <div>Volume (ton) </div>
        </div>

        <ul class="list-unstyled">
          <li><%= cargo.load_location %></li>
          <li><%= cargo.discharge_location %></li>
          <li><%= cargo.gas_free ? 'Yes' : 'No' %></li>
          <li><%= cargo.cargo_load_window %></li>
          <li><%= cargo.volume %></li>
        </ul>
      </div>
      <div class= "cargo-contact-card">
        <h3>Contact</h3>
        <div class="contact-buttons-card">
          <a class="far fa-comments fa-lg" href="#"></a>
          <a class="fas fa-phone-volume fa-lg" href="#"></a>
          <a class="far fa-envelope fa-lg" href="#"></a>
        </div>
        <div class="book-button">
          <div class="btn-home"><%= link_to "Book cargo"%></div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
