
    <div class="cargo-text">
      <h1>Find your cargo here</h1>
    </div>
    <%= simple_form_for '', method: :get do |f| %>
      <div class="filter-result-card">
        <div class="filter-box-card">
          <div class="green-filter-box">
            Area
          </div>
          <div class="white-filter-box">
            <%= f.input :barge_areas, as: :check_boxes, collection: [['ARA', 'ARA'], ['Rhine',
              'Rhine'], ['Middle-Rhine', 'Middle-Rhine'], ['Upper-Rhine', 'Upper-Rhine']] %>
          </div>
        </div>
        <div class="filter-box-card">
          <div class="green-filter-box">
            Cargo
          </div>
          <div class="white-filter-box">
            <%= f.input :barge_types, as: :check_boxes, collection: [['CPP', 'CPP'], ['Fuel', 'Fuel'],
              ['Chemicals', 'Chemicals'], ['Bunker', 'Bunker']] %>
          </div>
        </div>
        <div class="filter-box-card">
          <div class="green-filter-box">
            <%= f.input :volume, collection: [['< 1500', 0], ['1500 - 2500', 1],
              ['2500 - 4000', 2], ['4000 +', 3]] %>
          </div>
        </div>
        <div class="filter-box-card">
          <div class="green-filter-box">
            <%= f.date_field :cargo_load_window  %>
           </div>
        </div>
      </div>
      <div class="search-button"><%= f.submit 'Search', :class => 'btn-home' %></div>
    <% end %>

